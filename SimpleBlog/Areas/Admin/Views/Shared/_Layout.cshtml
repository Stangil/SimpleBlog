@using System.Web.Optimization

@{
    Layout = null;
}

@helper SelectedTabClass(string tabName)
{
    if (tabName == ViewBag.SelectedTab)
    {
        @: active
    }
}
<!DOCTYPE html>
<html>
<head>
    <title>Simple Blog Admin</title>

    @Styles.Render("~/admin/styles")
</head>
    <body>
        <div class="container">
            <ul class="nav nav-pills">
                <li class="@SelectedTabClass("posts")">
                    @Html.ActionLink("Posts","Index", "Posts", new{area="admin"},
                        new{@class="nav-link"})
                </li>
                <li class="@SelectedTabClass("users")">
                    @Html.ActionLink("Users", "Index", "Users", new{area = "admin"},
                        new { @class = "nav-link" })
                </li>
                <li class="fa-pull-right">
                    @Html.RouteLink("Back to Website", "Home", new {},
                        new { @class = "nav-link" })
                </li>
            </ul>
            @RenderBody()
        </div>

       

        @Scripts.Render("~/admin/scripts")
        @RenderSection("Scripts", false)
    </body>
</html>
